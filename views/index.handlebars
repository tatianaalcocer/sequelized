<header>
<h1>Pomodoro!</h1>
</header>

<br><br>

<main>
  {{!-- Input for todo item --}}
  <div class="row">
    <form class="col s12 m6">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">mode_edit</i>
          <input id="todoInput" placeholder="Todo item" class="materialize-textarea"></input>
          <label for="icon_prefix2"></label>
          <button id="todoSubmit" class="waves-effect waves-light btn">submit</button>          
        </div>
      </div>
    </form>
  </div>

  <div class="row">
    <div class="col s12 m6">
      <div class="card blue darken-1">
        <div class="card-content white-text">
          <span class="card-title" id="time"></span>
          <div class="row">
          <div id="stopwatch" data-timer="1500"></div>
          </div>
        </div>
        <div class="card-action">
          <div class="row">
          <div class="col s6">
          <a id="start-button" class="blue-text green accent-1 waves-effect waves-light btn">Start</a>
          </div>
          <div class="col s6">
          <a id="restart-button" class="blue-text red accent-1 waves-effect waves-light btn">Restart</a>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  
  {{!-- handlebars --}}
  {{#each task}}
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <p>{{this.body}}</p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</main>


<footer class="page-footer white">

</footer>

